<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hh"
    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutInfoActivity" >

    <LinearLayout
        android:id="@+id/SubContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/developer_list"
            android:layout_width="match_parent"
            android:layout_height="208dp" >
        </ListView>

        <TextView
            android:id="@+id/about_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n\nHow to play :- \nthis game is divided into squares you click on your tile and then decide which place to move  your tile to you have two options the first is to move and to create\nif you want to create you should choose the square adjacent to the current square\nif you want to move choose adjectent by two squares\nthe goal:-\nis to have larger number of tiles "
            android:textColor="@android:color/white"
            android:textSize="35sp" />

    </LinearLayout>

</ScrollView>
