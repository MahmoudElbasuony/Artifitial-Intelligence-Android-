<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Conatiner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/dd"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlayWithActivity" >
    
   
    
<Button
    android:id="@+id/p2c_btn"
    android:layout_width="200dp"
    android:layout_height="0dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="1"
    android:text="Person To Computer"
    android:textColor="@android:color/white"
    android:textStyle="bold" />
    
<Button
        android:id="@+id/p2p_btn"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="Person To Person" 
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />


<Button
    android:id="@+id/p2rp_btn"
    android:layout_width="200dp"
    android:layout_height="0dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="1"
    android:text="P To remote P"
    android:textColor="@android:color/white"
    android:textStyle="bold" />

    <Button
        android:textStyle="bold"
        android:id="@+id/back_btn"
        android:layout_width="200dp"
        android:layout_height="0dp"
         android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="Back" />



</LinearLayout>